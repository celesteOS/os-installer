using Gtk 4.0;
using Adw 1;

template $TerminalDialog: Adw.Dialog {
  child: Overlay {
    overflow: hidden;
    styles ["terminal-box"]

    child: Adw.Bin placeholder {
      margin-start: 12;
      margin-end: 12;
    };

    [overlay]
    Adw.HeaderBar {
      valign: start;
      styles ["flat"]
    }
  };

  closed => $closed();
}
