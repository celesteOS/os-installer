using Gtk 4.0;
using Gio 2.0;

template $ChoicesPage : Box {
  orientation: vertical;
  spacing: 12;

  ListBox list {
    hexpand: true;
    selection-mode: none;
    styles ["boxed-list"]
}

  Button {
    /* Translators: On button. */
    label: _("_Continue");
    focusable: true;
    halign: center;
    use-underline: true;
    clicked => $continue();
    styles ["suggested-action", "pill", "bottom-button"]
  }
}

Gio.ListStore model {}
