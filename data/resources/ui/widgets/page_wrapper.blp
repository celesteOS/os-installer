using Gtk 4.0;
using Adw 1;

template $PageWrapper : Adw.Bin {
  child: ScrolledWindow {
    propagate-natural-height: true;
    vexpand: true;

    child: Adw.Clamp {
      margin-top: 2;
      maximum-size: 500;
      tightening-threshold: 352;
      child: Adw.Bin content {
        hexpand: true;
      };
    };
  };
}
