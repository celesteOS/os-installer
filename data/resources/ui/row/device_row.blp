using Gtk 4.0;
using Adw 1;

template $DeviceRow : Adw.ActionRow {
  activatable: true;
  focusable: true;
  selectable: false;

  [prefix]
  Label size_label {
    width-chars: 5;
    max-width-chars: 7;
    xalign: 1;
    styles ["dim-label"]
  }

  [suffix]
  Image {
    halign: end;
    icon-name: "go-next-symbolic";
    visible: bind template.activatable;
  }
}
