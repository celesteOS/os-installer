using Gtk 4.0;

template SelectionRow : ListBoxRow {
  focusable: true;
  child: 
  Box {
    margin-start: 12;
    margin-end: 12;
    margin-top: 6;
    margin-bottom: 6;
    spacing: 6;

    Label label {
      wrap: true;
      ellipsize: end;
      lines: 2;
      xalign: 0;
    }

    Revealer check_mark_revealer {
      transition-type: crossfade;
      child: 
      Image {
        icon-name: "object-select-symbolic";
      };
    }
  };
}
